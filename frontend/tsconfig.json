{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017"],
    "baseUrl": ".",
  },
  "include": ["src", "webpack.config.ts"]
}
